{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build app (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--config",
        "Debug"
      ],
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "build app (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--config",
        "Release"
      ],
      "group": "build",
      "problemMatcher": ["$msCompile"]
    }
  ]
}
